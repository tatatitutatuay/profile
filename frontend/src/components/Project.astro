---
import { Image } from "astro:assets";

interface Project {
  name: string;
  description: string;
  urlImg: string;
  link: string;
}

interface Props {
  project: Project;
}

const { name, description, urlImg, link } = Astro.props.project;
---

<a
  href={link}
  target="_blank"
  class="relative flex flex-col items-stretch duration-300 ease-out p-3 group h-fit rounded-xl bg-white/80 dark:bg-gray-900/80 backdrop-blur-md w-full lg:max-w-82 overflow-hidden hover-lift"
>
  <span
    class="absolute inset-0 z-20 block size-full duration-300 ease-out bg-transparent border-2 border-transparent group-hover:-translate-x-2 group-hover:-translate-y-2 group-hover:border-2 group-hover:border-blue-500/50 dark:group-hover:border-purple-500/50 rounded-xl group-hover:bg-white/90 dark:group-hover:bg-gray-900/90 group-hover:shadow-xl"
  ></span>
  <span
    class="absolute inset-0 z-10 block w-full h-full duration-300 ease-out border-2 rounded-xl border-gray-200/50 dark:border-neutral-700/50 group-hover:translate-x-2 group-hover:translate-y-2 group-hover:border-blue-500/30 dark:group-hover:border-purple-500/30"
  ></span>
  <span
    class="relative z-30 block duration-300 ease-out group-hover:-translate-x-2 group-hover:-translate-y-2"
  >
    <span class="block w-full overflow-hidden rounded-lg">
      <Image
        loading={Astro.originPathname == "/" ? "lazy" : "eager"}
        src={urlImg}
        class="w-full max-h-72 rounded-lg object-center object-cover transition-transform duration-500 group-hover:scale-110"
        alt={name}
        width={200}
        height={200}
      />
    </span>
    <span class="block w-full px-1 mt-5 mb-1 sm:mt-3">
      <span
        class="flex items-center mb-2 text-base font-semibold tracking-tight text-gray-950 dark:text-gray-100"
      >
        <span class="group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-purple-600 group-hover:bg-clip-text group-hover:text-transparent transition-all duration-300">{name}</span>
        <svg
          class="group-hover:translate-x-1 group-hover:translate-y-0 -rotate-45 translate-y-1 -translate-x-1 w-2.5 h-2.5 stroke-current ml-1 transition-all ease-in-out duration-300 transform"
          viewBox="0 0 13 15"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          ><g
            stroke="none"
            stroke-width="1"
            fill="none"
            fill-rule="evenodd"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><g
              id="svg"
              transform="translate(0.666667, 2.333333)"
              stroke="currentColor"
              stroke-width="2.4"
              ><g
                ><polyline
                  class="transition-all duration-300 ease-out opacity-0 delay-0 group-hover:opacity-100"
                  points="5.33333333 0 10.8333333 5.5 5.33333333 11"
                ></polyline><line
                  class="transition-all duration-300 ease-out transform -translate-x-1 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 group-hover:ml-0"
                  x1="10.8333333"
                  y1="5.5"
                  x2="0.833333333"
                  y2="5.16666667"></line></g
              ></g
            ></g
          ></svg
        >
      </span>
      <span class="text-sm text-gray-600 dark:text-gray-400 block hover:overflow-visible hover:whitespace-normal transition-all duration-300"
        >{description}</span
      >
    </span>
  </span>
</a>
